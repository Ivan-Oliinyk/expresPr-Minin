<h1>Courses</h1>

{{#if courses.length}}
  <div class="wrapper-card">
    {{#each courses}}
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-image">
              <img src="{{img}}" alt="{{title}}" />
            </div>
            <div class="card-content">
              <span class="card-title">{{title}}</span>
              <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
              <a href="/courses/{{id}}">Open course</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No courses</p>
{{/if}}